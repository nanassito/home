    "version": "0.2.0",
    "configurations": [
        {
            "name": "Switches",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "cmd/switches/switches.go",
            "args": [
                "-mqtt=tcp://127.0.0.1:1883",
                "-config=${workspaceFolder}/configs/switches.json"
            ]
        },
        {
            "name": "Air",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "cmd/air/air.go",
            "args": [
                // "-mqtt=tcp://127.0.0.1:1883",
                "-config=${workspaceFolder}/configs/air.json",
                "-interval=1m",
                "-readonly"
            ]
        },
        {
            "name": "Netscan",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "cmd/netscan/netscan.go",
        },
        {
            "name": "Epa",
            "type": "python",
            "request": "launch",
            "cwd": "${workspaceFolder}/home",
            "module": "home",
            "args": [
                // "--log-level=DEBUG"
            ],
        },
        {
            "name": "STOP",
            "type": "python",
            "request": "launch",
            "cwd": "${workspaceFolder}/home",
            "module": "home.emergency",
        },
        {
            "name": "rain",
            "type": "python",
            "request": "launch",
            "cwd": "${workspaceFolder}/rain",
            "module": "rain",
        }
    ]
}