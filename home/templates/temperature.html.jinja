{% extends "base.html.jinja" %}
<!--  -->
{% block content %}
<!--  -->
<section class="container">
    <div class="row">
        {% for room in rooms %}
        <div class="col-6 gy-4">
            <div class="card text-center">
                <div class="card-header">
                    {{room.name}}
                </div>
                <div class="card-body">
                    <div>
                        <h1>{{room.current}}</h1>
                    </div>
                    <div>
                        <span style="color: var(--bs-blue);">{{room.min_1d}}</span>
                        <span> - </span>
                        <span style="color: var(--bs-red);">{{room.max_1d}}</span>
                    </div>
                    <div class="mt-2 d-flex justify-content-between">
                        <button type="button" class="btn btn-link btn-sm" href="{{room.link}}">
                            <i class="bi bi-graph-up"></i>
                        </button>
                        <span>
                            {% for hvac in room.hvacs %}
                            <button type="button" class="btn {{
                                {
                                    "OFF": "btn-secondary",
                                    "HEAT": "btn-warning",
                                    "COOL": "btn-info",
                                }[hvac.mode] | default("btn-success")
                            }} btn-sm" data-toggle="modal" data-target="#{{hvac.name}}Settings">
                                <i class="bi {{
                                    {
                                        "AUTO": "bi-water",
                                        "MEDIUM": "bi-wind",
                                        "HIGH": "bi-tornado",
                                    }[hvac.fan] | default("bi-question-diamond")
                                }}"></i>
                            </button>
                            {% endfor %}
                        </span>
                    </div>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
</section>

<section>
    {% for room in rooms %}
    {% for hvac in room.hvacs %}
    <div class="modal fade" id="{{hvac.name}}Settings" tabindex="-1" role="dialog" aria-labelledby="{{hvac.name}}SettingsLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="{{hvac.name}}SettingsLabel">{{hvac.name}}</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="btn-group btn-group-toggle" data-toggle="buttons">
                        <label class="btn btn-secondary">
                            <input type="radio" name="options" id="AUTO" autocomplete="off" {% if hvac.control == "AUTO" %}checked{% endif %}>
                            <i class="bi bi-robot"></i>
                        </label>
                        <label class="btn btn-secondary">
                            <input type="radio" name="options" id="APP" autocomplete="off" {% if hvac.control == "APP" %}checked{% endif %}>
                            <i class="bi bi-phone"></i>
                        </label>
                        <label class="btn btn-secondary">
                            <input type="radio" name="options" id="REMOTE" autocomplete="off" {% if hvac.control == "REMOTE" %}checked{% endif %}>
                            <i class="bi bi-hand-index"></i>
                        </label>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary">Save changes</button>
                </div>
            </div>
        </div>
    </div>
    {% endfor %}
    {% endfor %}
</section>
<!--  -->
{% endblock %}