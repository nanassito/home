{% extends "base.html.jinja" %}
<!--  -->
{% block content %}
<!--  -->
<section class="container">
    <div class="form-check form-switch d-flex justify-content-between">
        <span class="form-control-lg">
            <label class="form-check-label" for="enabled">Enabled</label>
            <input class="form-check-input" data-target="hvac" type="checkbox" role="switch" id="enabled" {% if hvac_controller_enabled %}checked{% endif %}>
        </span>
        <button id="settings-btn" type="submit" class="btn btn-secondary"><i class="bi bi-gear"></i></button>
    </div>
</section>
<section class="container">
    <div class="row">
        {% for room in rooms %}
        <div class="col-6 gy-4">
            <div class="card text-center">
                <div class="card-header">
                    <div class="d-flex justify-content-between">
                        <a href="{{room.link}}"><i class="bi bi-graph-up"></i></a>
                        <span>{{room.name}}</span>
                        <span>
                            {% for icon in room.hvac_icons %}
                            <i class="bi {{icon}}"></i>
                            {% endfor %}
                        </span>
                    </div>
                </div>
                <div class="card-body">
                    <h1>{{room.current}}</h1>
                    <span style="color: var(--bs-blue);">{{room.min_1d}}</span>
                    <span> - </span>
                    <span style="color: var(--bs-red);">{{room.max_1d}}</span>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
</section>
<!--  -->
{% endblock %}