{% extends "base.html.jinja" %}
<!--  -->
{% block content %}
<!--  -->
<section class="container">
    <div class="row">
        {% for video in videos %}
        <div class="col-6 gy-4">
            <div class="card text-center">
                <div class="card-header" style="background-color:{{video.color}};">
                    {{video.title}}
                </div>
                <video controls>
                    <source src="https://static.epa.jaminais.fr/videos/mes%20comptines%20%C3%A0%20signer/{{video.title.replace("'", "")}}.mp4" type="video/mp4">
                </video>
            </div>
        </div>
        {% endfor %}
    </div>
</section>

<!--  -->
{% endblock %}